<h1>Teams</h1>

<div class="table-responsive">
  <table class="table table-hover">

    <thead class="table-primary">
      <tr>
        <th>Name</th>
        <th>Home City</th>
        <th></th>
      </tr>
    </thead>

    <tbody>
      <% @teams.each do |team| %>
        <tr>
          <td><%= team.name %></td>
          <td><%= team.home_city %></td>
          <td class="text-nowrap">
            <%= link_to 'Show', team_path(team) %> |
            <%= link_to 'Edit', edit_team_path(team) %> |
            <%= button_to 'Delete', team_path(team), method: :delete, data: { turbo: false }, class: 'btn btn-link p-0 pb-1', form: { class: 'd-inline' }  %>
          </td>
        </tr>
      <% end %>
    </tbody>

  </table>
</div>

<p>
  <%= link_to 'New Team', new_team_path, class: 'btn btn-primary' %>
</p>
